{
  "name": "yarn-plugin-script-daemon",
  "main": "./src/index.ts",
  "dependencies": {
    "@types/node": "^14.0.0",
    "@yarnpkg/builder": "^4.2.1",
    "@yarnpkg/cli": "2",
    "@yarnpkg/core": "2",
    "@zensors/sheriff": "^2.0.2",
    "clipanion": "^3.0.1",
    "node-watch": "^0.7.1",
    "pstree.remy": "^1.1.8",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "build": "builder build plugin",
    "bash": "bash"
  },
  "r": {
    "test1": {
      "onExit": "wait",
      "script": "sleep 1 && echo test1"
    },
    "test2": {
      "onExit": "restart",
      "script": "sleep 2 && echo test2"
    },
    "test3": {
      "onExit": "kill",
      "script": "sleep 5 && echo test3"
    },
    "test4": {
      "onExit": "wait",
      "script": "sleep 10 && echo test4"
    },
    "test": [
      "r:test1",
      "r:test2",
      "r:test3",
      "r:test4"
    ],
    "test-kill": [
      {
        "onExit": "kill",
        "script": "sleep 1"
      },
      "sleep 5 && echo the end"
    ],
    "test1pass": "r:@yarnpkg/sdk->test1",
    "build:watch": {
      "script": "builder build plugin",
      "watch": [
        "./src"
      ],
      "onExit": "wait"
    }
  },
  "packageManager": "yarn@3.8.7"
}
